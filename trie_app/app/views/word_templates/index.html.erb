<h1>This is a page customized to add new words to the database</h1>

{{words.catchphrase}}

<form ng-submit="words.addWord(newWord)">
	<input type="text" ng-model="newWord.name">
	<button>Save</button>
</form>

{{words}}


<div ng-repeat="word in words.Word.all">
	{{word}} and {{word.name}}
